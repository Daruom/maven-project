pipeline {
	agent any
	parameters {
		string(name: 'tomcat_dev', defaultValue: '18.222.187.242', description: 'IQ server')
		string(name: 'tomcat_prod', defaultValue: '18.219.69.27', description: 'PROD server')
		string(name: 'pem_directory', defaultValue: '/home/thor/Public/Jenkins-projects/maven-project', description: 'pem direct')
	}
	triggers {
		pollSCM('* * * * *')
	}

 stages{
	stage('Build'){
		steps {
			sh 'mvn clean package'
		}
		post {
			success {
			 echo 'Now Archiving...'
			 archiveArtifacts artifacts: '**/target/*.war'
			}

		}

	}


	stage('Deployments'){
		parallel{
			stage('Deploy to IQ'){
				steps {

					sh "sudo scp -i /home/thor/Public/Jenkins-projects/tomcat-demo.pem **/target/*.war ec2-user@${params.tomcat_dev}:/var/lib/tomcat7/webapps"
				}
			}


		}
	}
 }

}
