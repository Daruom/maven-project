pipeline {
        agent any
         stages{
                stage('Init'){
                        steps {
                         echo "Nothing to do"
                        }
                }

                stage('Build'){
                        steps {
                         echo "Building..."
			 sh 'mvn clean package'
                        }
			post {
			 success {
			  echo 'Now archiving...'
			  archiveArtificats artifacts: '**/*.war'
				 }
			}
                }

                stage('Deploy'){
                        steps {
                         echo "Deploying..."
                        }
                }
        }
}

